<div class="bg-white shadow-md rounded">
    {% if article.imageName ?? NULL %}
        <img src="{{ asset('images/' ~ article.imageName) }}" alt="{{ article.imageAlt }}" class="w-full h-48 object-cover">
    {% else %}
        <img src="{{ article.imageURL }}" alt="{{ article.imageAlt }}" class="w-full h-48 object-cover">
    {% endif %}
    <div class="p-4">
        <h2 class="text-xl font-semibold mb-2">{{ article.title }}</h2>
        <p class="text-gray-700 mb-4">{{ article.shortDescription |raw }}</p>
        <a href="{{ path('app_article', {slug: article.category.slug, articleSlug: article.slug}) }}" class="text-primary-color hover:underline">Lire plus</a>
    </div>
</div>