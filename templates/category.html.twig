{% extends 'base.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-3xl font-bellyDisplay uppercase text-center mb-8">{{ category.title }}</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-8">
            {% for article in category.articles %}
                {% include 'parts/articleCard.html.twig' with {'article': article} %}
            {% endfor %}
        </div>
    </div>
{% endblock %}